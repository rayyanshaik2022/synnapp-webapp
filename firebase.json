{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  },
  "apphosting": [
    {
      "backendId": "synnapp-webapp-host",
      "rootDir": ".",
      "ignore": [
        "node_modules",
        ".git",
        ".next",
        "firebase-debug.log",
        "firestore-debug.log",
        "playwright-report",
        "test-results",
        ".npm-cache"
      ]
    }
  ]
}
